<h1>Editing trader</h1>
<%= form_for([@trader.portfolio_manager, @trader]) do |form| %>
 <% if  @trader.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize( @trader.errors.count, "error") %> prohibited this trader from being saved:</h2>
      <ul>
        <%  @trader.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="p-2 d-flex flex-column">
    <div class="form-group">
      <%= form.label :first_name%>
      <%= form.text_field :first_name, class:"form-control",placeholder:"First name" %>
    </div>
    <div class="form-group">
      <%= form.label :last_name%>
      <%= form.text_field :last_name, class:"form-control",placeholder:"Last name" %>
    </div>
    <div class="form-group">
      <%= form.label :email%>
      <%= form.text_field :email, class:"form-control",placeholder:"Email" %>
    </div>
    <div class="form-group">
      <%= form.label :password%>
      <%= form.password_field :password, class:"form-control",placeholder:"Password" %>
    </div>
    <div class="form-group">
      <%= form.label :balance%>
      <%= form.text_field :balance, class:"form-control",placeholder:"Balance" %>
    </div>
    <div class="d-flex flex-row">
      <% if isAdmin %>
        <div class="p-2 form-group">
          <%= link_to "Cancel", @trader.portfolio_manager , class:"btn btn-secondary"%>
        </div>
      <% end %>
      <div class="p-2 form-group">
        <%= form.submit :Submit, :value => "Save", class:"btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
