<div  data-controller="administratorProfile">
  <%= form_with model: @administrator, url: "/administrator_profile/update", method: :patch, local: true do |form| %>
    <%= form.file_field :profile_image_file, id: "inputFileId", type: "file", class:"custom-file-input" ,
          data: { action: "change->administratorProfile#inputFileOnChanged" }%>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <p style="color: green"><%= notice %></p>
        <div class="card">
          <div class="card-header">Administrator profile</div>
          <div class="card-body">
            <% if @administrator.errors.any? %>
              <div style="color: red">
                <h2><%= pluralize(@administrator.errors.count, "error") %> prohibited this administrator profile from being saved:</h2>
                <ul>
                  <% @administrator.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="row">
              <div class="col-md-6">
                <%# <div class="p-2 d-flex flex-column"> %>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <%= form.label :first_name %>
                      <%= form.text_field :first_name, class:"form-control",placeholder:"First name"  %>
                    </div>
                    <div class="form-group">
                      <%= form.label :last_name %>
                      <%= form.text_field :last_name, class:"form-control",placeholder:"Last name"  %>
                    </div>
                  </div>
                </div>
                <%# </div> %>
              </div>
              <div class="col-md-6">
                <div class="form-group mt-2 ">
                  <%# <label  for="previewImage">Profile photo</label> %>
                  <img id="previewImage" src="<%= @administrator.profile_image%>"  class="<%= 'profile-thumbnail' if @administrator.profile_image.present? %>" style="height: 150px" />
                  <i id="avatar" class="fa-solid fa-user-tie profile-thumbnail" style="height:141px; <%= 'display:none' if @administrator.profile_image.present? %>"></i>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :email %>
                  <%= form.text_field :email, class:"form-control",placeholder:"Email"  %>
                </div>
                <div class="form-group">
                  <%= form.label :password %>
                  <%= form.password_field :password, class:"form-control",placeholder:"Password"  %>
                </div>
              </div>
              <div class="col-md-6">
                <a class="btn" id="uploadBtn" data-action ="click->administratorProfile#uploadPhoto">
                  <i class="fa-solid fa-camera fa-xl"></i>
                  <span class="icon-name" style="display: -webkit-box; font-size: 80%;">Select photo</span>
                </a>
                <a class="btn" id="deleteBtn"  data-action="click->administratorProfile#deletePhoto">
                  <i class="fa-solid fa-trash-can fa-xl"></i>
                  <span class="icon-name" style="display: -webkit-box; font-size: 80%;">Delete</span>
                </a>
                <%# <label class="custom-file-label" for="inputFileId">Choose file</label> %>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <div class="text-right">
              <%= form.submit :Submit, :value => "Save", class:"btn btn-primary", style: "width: 100px;border-radius: 50rem!important;" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="container">
    <div class="row no-gutters">
      <div class="col-4">
        <div class="cell"></div>
      </div>
      <div class="col-4">
        <div class="cell"></div>
      </div>
      <div class="col-4">
        <div class="cell"></div>
      </div>
    </div>
    <div class="row no-gutters">
      <div class="col-8">
        <div class="row no-gutters">
          <div class="col-6">
            <div class="cell"></div>
          </div>
          <div class="col-6">
            <div class="cell"></div>
          </div>
        </div>
        <div class="row no-gutters">
          <div class="col-6">
            <div class="cell"></div>
          </div>
          <div class="col-6">
            <div class="cell"></div>
          </div>
        </div>
        <div class="row no-gutters">
          <div class="col-6">
            <div class="cell"></div>
          </div>
          <div class="col-6">
            <div class="cell"></div>
          </div>
          <div class="col-6">
            <div class="cell"></div>
          </div>
          <div class="col-6">
            <div class="cell"></div>
          </div>
        </div>
      </div>
      <div class="col-4">
        <div class="cell cell__big"></div>
      </div>
    </div>
  </div>
