<p style="color: green"><%= notice %></p>
<h1>Administrators</h1>
<%= link_to "Add new", new_administrator_path,  class: "btn btn-primary" %>
<table class="table mt-2 ">
  <thead>
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @administrators.each do |administrator| %>
      <tr>
        <td><%= administrator.first_name %></td>
        <td><%= administrator.last_name %></td>
        <td><%= administrator.email %></td>
        <td>
          <div>
            <%= link_to 'Edit', edit_administrator_path(administrator), class: "btn btn-outline-primary" %>
            <%= link_to "Remove",[administrator], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                },   class: "btn btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
 