<div class="pt-5">
  <h1 class="text-center">Welcome to Trading Cloud Platform</h1>
  <div class="pt-5 text-center">
    <h3 style="color: red"><%= notice %></h3>
    <%= form_with url: sessions_path do |f| %>
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header">Please Log In</div>
            <div class="card-body">
              <div class="form-group">
                <label for="email" >Email</label>
                <%= f.text_field :email, id: "email", class:"form-control",placeholder:"Email or account name"  %>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <%= f.password_field :password, id: "password",class:"form-control",placeholder:"Password"   %>
              </div>
              <div class="acard-footer text-center">
                <%= f.submit :Submit, :value => "Sign in", class:"btn btn-primary", style: "width: 300px;border-radius: 50rem!important;" %></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
