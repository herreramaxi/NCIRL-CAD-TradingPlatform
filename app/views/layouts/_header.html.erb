<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <span class="navbar-brand mb-0 h1"  href="#">TradingApp</span>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto mb-2 mb-lg-0">
          <% if logged_in? %>
            <% if isAdmin %>
              <li class="nav-item active">
                <%= link_to "Administrators", administrators_path, class: "nav-link"%>
              </li>
              <li class="nav-item active">
                <%= link_to "Portfolio Managers", portfolio_managers_path, class: "nav-link"%>
              </li>
            <% end %>
            <% if isAdmin || isTrader%>
              <li class="nav-item active">
                <%= link_to "Trading", trading_index_path, class: "nav-link"%>
              </li>
            <% end %>
          <% end %>
        </ul>
        <% if !logged_in? %>
          <div>
            <%= link_to 'Sign In', sessions_new_path, class: "dropdown-item" %>
          </div>
        <% else %>
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a class="nav-link adropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
                <%= "#{current_user.email}" %> <i class="fa-solid fa-bars"></i>
              </a>
              <div  class="dropdown-menu">
                <% if isTrader %>
                  <a> <%= link_to 'Profile', trader_profile_index_path, class: "dropdown-item" %> </a>
                <% end %>               
                <a> <%= link_to 'Logout', sessions_destroy_path, method: :delete, class: "dropdown-item" %> </a>
              </div>
            </div>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</nav>
</header>
