<%= form_with(model: portfolio_manager) do |form| %>
  <% if portfolio_manager.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(portfolio_manager.errors.count, "error") %> prohibited this portfolio_manager from being saved:</h2>
      <ul>
        <% portfolio_manager.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="p-2 d-flex flex-column">
    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class:"form-control",placeholder:"First name"  %>
    </div>
    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class:"form-control",placeholder:"Last name"  %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class:"form-control",placeholder:"Emails"  %>
    </div>
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class:"form-control",placeholder:"Password"  %>
    </div>
    <div class="d-flex flex-row">
      <% if isAdmin %>
        <div class="p-2 form-group">
          <%= link_to "Cancel", portfolio_managers_path , class:"btn btn-secondary"%>
        </div>
      <% end %>
      <div class="p-2 form-group">
        <%= form.submit :Submit, :value => "Save", class:"btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
